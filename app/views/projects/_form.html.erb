
<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :folio %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :date %>
    <%= f.input :observation %>
    <%= f.input :subtotal %>
    <%= f.input :total %>
    <%= f.input :adjustment_total %>
    <%= f.input :tax %>
    <%= f.input :tax_total %>
    <%= f.input :tax_item_total %>
    <%= f.input :state %>
    <%= f.input :validity %>
    <%= f.association :currency %>
    <%= f.input :exchange_rate %>
    <%= f.association :receipt_type %>
    <%= f.association :entry_code %>
    <%= f.association :provider %>
    <%= f.input :created_by_id %>
    <%= f.input :deleted_at %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
