<% if @collection.each do |object| %>
<tr>
        
        <td><%= object.folio %></td>
        <td><%= object.customer ? object.customer.business_name : "N/A" %></td>
        <td><%= object.subtotal %></td>
        <td>
            <% if object.deleted_at? %>
                <span class="badge badge-danger"><%= t("deleted")%></span>
            <% end %>

            <% unless object.deleted_at? %>
                <span class="badge badge-<%= object.state %>"><%= t(object.state) %></span>
            <% end %>
        </td>
        <td>
            <%= link_to show_from_modal_admin_quotation_service_path(object), :class => "btn btn-sm btn-info", data: { modal: true, turbolinks: false, toggle: 'tooltip', placement: 'top', original_title: t('information') }   do %>
                <em class="fas fa-info-circle"></em> 
            <%end%>

        	<%= link_to edit_admin_quotation_service_path(object), :class => "btn btn-sm btn-info", data: { toggle: 'tooltip', placement: 'top', original_title: t('edit') } do %>
        		<em class="fa fa-edit"></em> 
        	<%end%>

            <%= link_to sales_admin_quotation_service_path(object), :class => "btn btn-sm btn-info #{object.sale.present? ? 'disabled-link' : ''}", data: { toggle: 'tooltip', placement: 'top', original_title: t('sale_order') } do %>
                <em class="fa-1x fas fa-shopping-cart"></em> 
                
                
            <%end%>            

             <%= link_to admin_quotation_service_path(object), :class => "btn btn-sm btn-info", data: { toggle: 'tooltip', placement: 'top', original_title: t('bill') } do %>
                <em class="fa-1x fas fa-external-link-alt"></em>
             <%end%>

            <button class="btn dropdown-toggle btn-info" type="button" data-toggle="dropdown" aria-expanded="false"><em class="fas fa-print"></em></button>
               <div class="dropdown-menu" role="menu" style="">
                    <%= link_to show_from_pdf_admin_quotation_service_path(object, format: :pdf), :class => "dropdown-item", target: :_blank do %>
                        Cotizaci√≥n
                    <%end%>

                    <% if object.sale.present? %>
                    <%= link_to note_from_pdf_admin_quotation_service_path(object, format: :pdf), :class => "dropdown-item", target: :_blank do %>
                        Nota de venta
                    <%end%>
                    <% end %>
               </div>

        	<%= link_to delete_admin_quotation_service_path(object), :class => "btn btn-sm btn-danger", remote: true, data: { toggle: 'tooltip', placement: 'top', original_title: t('remove') }   do %>
        		<em class="fa fa-trash fa-fw"></em>
        	<%end%>           		
        </td>

</tr>
<% end.empty? %>
  <h3>No hay resultados</h3>
<% end %>