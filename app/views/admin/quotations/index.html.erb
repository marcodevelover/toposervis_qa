<p id="notice"><%= notice %></p>

<h1>Quotations</h1>

<table>
  <thead>
    <tr>
      <th>Number</th>
      <th>Item total</th>
      <th>Total</th>
      <th>Adjustment total</th>
      <th>Tax</th>
      <th>Tax total</th>
      <th>Tax item total</th>
      <th>State</th>
      <th>Validity</th>
      <th>Currency</th>
      <th>Exchange rate</th>
      <th>Customer</th>
      <th>Condition</th>
      <th>Created by</th>
      <th>Canceled at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotations.each do |quotation| %>
      <tr>
        <td><%= quotation.number %></td>
        <td><%= quotation.item_total %></td>
        <td><%= quotation.total %></td>
        <td><%= quotation.adjustment_total %></td>
        <td><%= quotation.tax %></td>
        <td><%= quotation.tax_total %></td>
        <td><%= quotation.tax_item_total %></td>
        <td><%= quotation.state %></td>
        <td><%= quotation.validity %></td>
        <td><%= quotation.currency_id %></td>
        <td><%= quotation.exchange_rate %></td>
        <td><%= quotation.customer_id %></td>
        <td><%= quotation.condition %></td>
        <td><%= quotation.created_by_id %></td>
        <td><%= quotation.canceled_at %></td>
        <td><%= link_to 'Show', quotation %></td>
        <td><%= link_to 'Edit', edit_admin_quotation_path(quotation) %></td>
        <td><%= link_to 'Destroy', quotation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

