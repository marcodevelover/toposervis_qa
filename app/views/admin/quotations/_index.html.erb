<% if @collection.each do |object| %>
<tr>
        <td scope="row" ><%= object.id %></td>
        <td><%= object.folio %></td>
        <td><%= object.customer ? object.customer.business_name : "N/A" %></td>
        <td><%= object.total %></td>
        <td>
            <% if object.deleted_at? %>
                <span class="badge badge-danger">Baja</span>
            <% end %>

            <% unless object.deleted_at? %>
                <span class="badge badge-<%= object.state %>"><%= object.state %></span>
            <% end %>
        </td>

        <td>
            <%= link_to show_from_modal_admin_quotation_path(object), :class => "btn btn-sm btn-info", data: { modal: true, turbolinks: false }   do %>
                <em class="fas fa-info-circle"></em> 
            <%end%>

        	<%= link_to edit_admin_quotation_path(object), :class => "btn btn-sm btn-info" do %>
        		<em class="fa fa-edit"></em> 
        	<%end%>

            <%= link_to sales_admin_quotation_path(object), :class => "btn btn-sm btn-info" do %>
                <em class="fa fa-money-bill-alt"></em> 
            <%end%>            

            <%= link_to show_from_pdf_admin_quotation_path(object, format: :pdf), :class => "btn btn-sm btn-info", target: :_blank do %>
                <em class="fas fa-print"></em> 
            <%end%>
        		
        	<%= link_to delete_admin_quotation_path(object), :class => "btn btn-sm btn-danger", remote: true   do %>
        		<em class="fa fa-trash fa-fw"></em>
        	<%end%>           		
        </td>

</tr>
<% end.empty? %>
  <h3>No hay resultados</h3>
<% end %>



