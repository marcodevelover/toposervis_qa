<div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
          <tr class="top">
            <td colspan="5">
              <table>
                <tr>
                  <td class="title" style="width:25%">
                    <%= wicked_pdf_image_tag 'pdf/logo.png' %>
                  </td>
                  <td style="text-align: center; width:50%" class="top">
                    <strong>Toposervis S de RL de CV</strong>
                    <br>
                    <span>RFC: TOP160404KU0</span>
                    <br>
                    <span>Calle 42 No.264 x 41A y 41C, C.P. 97203 </span>
                    <br>
                    <span>Francisco de Montejo III Mérida,Yucatán </span>
                    <br>
                    <span>Tel. 01 (800) 890 9383, (999) 4 29 82 78</span>
                    <br>
                  </td>
                  <td style="text-align: center; width:25%">
                    <br>
                    <% if @quotation.sale.present?%>
                    <strong>Nota de venta</strong><br>
                    <b>Folio:</b>
                    <b class="blue"><%= @quotation.sale.folio %></b><br>
                    <b>Fecha:</b>
                    <b class="blue"><%= @quotation.sale.created_at.strftime("%d-%m-%Y") %></b><br>
                    <% end %>                    
                    <strong>Cotización</strong><br>
                    <b>Folio:</b>
                    <b class="blue"><%= @quotation.folio %></b><br>
                    <b>Fecha:</b>
                    <b class="blue"><%= @quotation.created_at.strftime("%d-%m-%Y") %></b>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        

          <tr class="information">
            <td colspan="5">
              <table>
                <tr>
                  <td class="top">
                    <b>Compañia:</b>
                    <%= @quotation.customer.business_name.blank? ? "----" : @quotation.customer.business_name %><br>
                    <b>RFC:</b>
                    <%= @quotation.customer.rfc.blank? ? "----" : @quotation.customer.rfc %><br>
                  	<b>Contacto:</b>
                    <%= @quotation.customer.customer_contacts.blank? ? "----" : @quotation.customer.customer_contacts.first.name.blank? ? "----" : @quotation.customer.customer_contacts.first.name %><br>
                    <b>Teléfono:</b>
                    <%= @quotation.customer.customer_contacts.blank? ?  "----" : @quotation.customer.customer_contacts.first.phone.blank? ? "----" : @quotation.customer.customer_contacts.first.phone %><br>
                    <b>E-mail:</b>
                    <%= @quotation.customer.customer_contacts.blank? ? "----" : @quotation.customer.customer_contacts.first.email.blank? ? "----" : @quotation.customer.customer_contacts.first.email %><br>
                    
                    <% if @quotation.sale.present? %>
                    <b>Método de pago:</b>
                    <%= @quotation.sale.payment_method.name %><br>
                    <b>Forma de pago:</b>
                    <%= @quotation.sale.payment_way.name %>            
                    <% end %>
                  </td>

                </tr>
              </table>
            </td>
          </tr>

          <tr class="heading">
            <td class="center">Concepto</td>
            <td style="text-align: center;">Unidad</td>
            <td class="center">Precio</td>
            <td class="center">Cantidad</td>
            <td class="center">Total</td>
          </tr>

          <% @quotation.items.each do |item| %>
            <tr class="item">
                <td>
                    <%= item.name %><br>
                    <small><%= item.extended_description %></small>
                </td>

                <td style="text-align: center;">
                    <%= item.unit %>
                </td>

                <td class="center">
                    <%= number_to_currency(item.unit_price) %>
                </td>

                <td class="center">
                    <%= item.quantity %>
                </td>

                <td class="center">
                    <%= number_to_currency(item.unit_price * item.quantity) %> <%= item.currency %>
                </td>
            </tr>
          <% end %>

          <tr>
            <td colspan="5"></td>
          </tr>

          <tr>
            <td colspan="3"></td>
            <td><b>Subtotal</b></td>
            <td class="center"><%= number_to_currency(@quotation.subtotal) %></td>
          </tr>

          <tr>
            <td colspan="3"></td>
            <% if @quotation.adjustment_total != 0 %>
            <td><b>Descuento</b></td>
            <td class="center">- <%= number_to_currency(@quotation.adjustment_total) %></td>
            <% end %>
          </tr>

          <tr>
            <td colspan="3"></td>
            <% if @quotation.is_tax %>
            <td><b>Impuesto (<%= (@quotation.tax * 100).to_i %>%)</b></td>
            <td class="center">+ <%= number_to_currency(@quotation.tax_total) %></td>
            <% end %>
          </tr>

          <tr>
            <td colspan="3"></td>
            <td><b>TOTAL:</b></td>
            <td class="center">
              <% if @quotation.is_tax %>
              <b><%= number_to_currency(@quotation.total) %> <%= @quotation.currency.name %></b>
              <%else%>
              <b><%= number_to_currency(@quotation.subtotal) %> <%= @quotation.currency.name %></b>
              <%end%>
            </td>
          </tr>

          <tr>
            <td colspan="5">
              <table>
                <tr>
                  <td>
                  	<td><b>Términos de venta:</b></td>
                  </td>
                  <td>
                  	<%= @quotation.condition %>
                  </td>

                </tr>
              </table>
            </td>
          </tr>
              </table>
            </td>
          </tr>          
          
        </table>
    </div>