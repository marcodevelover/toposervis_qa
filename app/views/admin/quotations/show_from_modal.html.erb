<div class="modal-body">
<p id="notice"><%= notice %></p>

<p>
  <strong><%= t("quotations.folio")%>:</strong>
  <%= @quotation.folio %>
</p>
<p>
  <strong>¿Incluye impuestos?</strong>
  <%= t @quotation.is_tax?.to_s %>
</p>
<p>
  <% if @quotation.is_tax %>  
    <strong>Subtotal:</strong>
  <% else %>  
    <strong>Total:</strong>
  <% end %>
<%= @quotation.subtotal %>
</p>

<p>
  <strong><%= t("quotations.adjustment_total")%>:</strong>
  <%= @quotation.adjustment_total %>
</p>

<% if @quotation.is_tax %>
  <p>
    <strong><%= t("quotations.total")%>:</strong>
    <%= @quotation.total %>
  </p>
    
  <p>
    <strong><%= t("quotations.tax")%>:</strong>
    <%= @quotation.tax %>
  </p>

  <p>
    <strong><%= t("quotations.tax_total")%>:</strong>
    <%= @quotation.tax_total %>
  </p>
  <p>
    <strong><%= t("quotations.tax_item_total")%>:</strong>
    <%= @quotation.tax_item_total %>
  </p>
<% end %>
<p>
  <strong><%= t("quotations.state")%>:</strong>
  <%= t(@quotation.state) %>
</p>

<p>
  <strong><%= t("quotations.validity")%>:</strong>
  <%= @quotation.validity %>
</p>

<p>
  <strong><%= t("quotations.currency")%>:</strong>
  <%= @quotation.currency ? @quotation.currency.abbreviation : "N/A" %>
</p>

<p>
  <strong><%= t("quotations.exchange_rate")%>:</strong>
  <%= @quotation.exchange_rate %>
</p>

<p>
  <strong><%= t("quotations.customer")%>:</strong>
  <%= @quotation.customer ? @quotation.customer.name : "N/A" %>
</p>
<p>
  <strong>RFC:</strong>
  <%= @quotation.customer ? @quotation.customer.rfc : "N/A" %>
</p>
    
    
    <b>Contacto:</b>
    <%= @quotation.customer.customer_contacts.blank? ? "----" : @quotation.customer.customer_contacts.first.name %><br>
    <b>Compañia:</b>
    <%= @quotation.customer.business_name %><br>
    <b>E-mail:</b>
    <%= @quotation.customer.customer_contacts.blank? ? "----" : @quotation.customer.customer_contacts.first.email %><br>
    

<p>
  <strong><%= t("quotations.condition")%>:</strong>
  <%= @quotation.condition %>
</p>

<p>
  <strong><%= t("quotations.created_by")%>:</strong>
  <%= @quotation.user.name %> <%= @quotation.user.lastname %>
</p>

<h4>Productos</h4>

<% @quotation.items.each do |item| %>
  <p>
    <strong>Producto:</strong>
    <%= item.product_variant.product.name %>
  </p>
<% end %>

<p>
  <strong><%= t("quotations.deleted_at")%>:</strong>
  <%= @quotation.deleted_at %>
</p>

</div>
<div class="modal-footer"> 
     <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t(:close) %></button>
</div>
