<%= simple_form_for([:admin, @product_variant], remote: request.xhr?, html: { data: { modal: true } }) do |form| %>               
                  
<div class="modal-body">
  <div style="background-color:#f05050; border-color: #f05050; border-radius: 0.25rem; color:white; font-weight:bold;">
        <ul class="errors"></ul>
  </div> 

  <div class="form-group">
        <%= form.label :code, class: "col-form-label"%> *
        <%= form.text_field :code, class: "form-control", type: "text", required: true %>
  </div>

  <div class="form-group">
        <%= form.label :code_alternative, class: "col-form-label"%> *
        <%= form.text_field :code_alternative, class: "form-control", type: "text", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :currency_id, class: "col-form-label"%>
    <div class="form-group">
      <%= form.collection_select :currency_id, Currency.all, :id, :abbreviation, {prompt: t('choose_from_select')}, {class: "custom-select custom-select-sm"}  %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :product_id, class: "col-form-label"%>
    <div class="form-group">
      <%= form.collection_select :product_id, Product.all, :id, :name, {prompt: t('choose_from_select')}, {class: "custom-select custom-select-sm"}  %>
    </div>
  </div>


  <%= form.fields_for :product_variant_images do |f| %>
        

           <div class="form-group row " >
            <div class="col-md-3">
              <%= image_tag @product_variant.product_variant_images.first.image.variant(resize_to_limit: [100, 100]) %>
            </div> 
            <div class="col-md-9">
              <div class="col-md-12">
                <%= f.file_field :image%>
              </div>
              <div class="col-md-12">
                <label>Eliminar</label> <%= f.check_box :_destroy    %>
              </div>
            </div>
          </div>       
  <% end %>

  <%= link_to_add_fields "Agregar ImÃ¡gen", form, :product_variant_images, authenticity_token: true %>

   <div class="required">* Required fields</div>
</div>
<div class="modal-footer">
   <div class="clearfix">
      <div class="float-right">
        <%= form.submit class: "btn btn-primary" %>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
   </div>
</div>
                     
<% end %>

<script type="text/javascript">
$("[data-form-prepend]").click(function(e) {
  var obj = $($(this).attr("data-form-prepend"));
  obj.find("input, select, textarea").each(function() {
    $(this).attr("name", function() {
      return $(this)
        .attr("name")
        .replace("new_record", new Date().getTime());
    });
  });
  obj.insertBefore(this);
  return false;
});        
</script>