  	 <%= search_form_for [:admin, @q], remote:true do |f| %> 			
			<div class="modal-body">
				<div class="form-group">
					<div class="form-group"> 
						<label class="form-label"><%= t("depots.name")%></label>
						<div class="form-group">
							<%= search_field_tag  "q[name_cont]",nil,class: "form-control", placeholder: t('depots.name'), width: '100%'%>
						</div>
					</div>
					<div class="form-group"> 
						<label class="form-label"><%= t("depots.description")%></label>
						<div class="form-group">
							<%= search_field_tag "q[description_cont]",nil,class: "form-control" , placeholder: t('depots.description') %>
						</div>
					</div>
					<div class="form-group"> 
						<label class="form-label"><%= t("depots.abbreviation")%></label>
						<div class="form-group">
							<%= search_field_tag "q[abbreviation_cont]",nil,class: "form-control" , placeholder: t('depots.abbreviation') %>
						</div>  
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<%= submit_tag t('search'),class: 'btn btn-primary waves-effect' %> 
				<button type="button" class="btn btn-danger waves-effect" data-dismiss="modal">Cancelar</button>
			</div>
		<% end %>