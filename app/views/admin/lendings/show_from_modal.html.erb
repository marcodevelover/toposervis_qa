<div class="modal-body">
<p id="notice"><%= notice %></p>

<p>
  <strong><%= t("lendings.folio")%>:</strong>
  <%= @lending.folio %>
</p>

<p>
  <strong><%= t("lendings.code_invoice")%>:</strong>
  <%= @lending.code_invoice %>
</p>

<p>
  <strong><%= t("lendings.subtotal")%>:</strong>
  <%= @lending.subtotal %>
</p>

<p>
  <strong><%= t("lendings.total")%>:</strong>
  <%= @lending.total %>
</p>

<p>
  <strong><%= t("lendings.tax")%>:</strong>
  <%= @lending.tax %>
</p>

<p>
  <strong><%= t("lendings.tax_total")%>:</strong>
  <%= @lending.tax_total %>
</p>

<p>
  <strong><%= t("lendings.state")%>:</strong>
  <%= @lending.state %>
</p>

<p>
  <strong><%= t("lendings.date")%>:</strong>
  <%= @lending.date %>
</p>

<p>
  <strong><%= t("lendings.provider")%>:</strong>
  <%= @lending.provider ? @lending.provider.name : "N/A" %>
</p>

<p>
  <strong><%= t("lendings.created_by")%>:</strong>
  <%= @lending.user.name %> <%= @lending.user.lastname %>
</p>

<h4>Productos</h4>

<% @lending.lending_items.each do |item| %>
  <p>
    <strong>Producto:</strong>
    <%= item.product_variant.product.name %><br>
    <small><b>Unidad: </b> <%= item.unit %></small><br>
    <small><b>No. Serie: </b> <%= item.number_serie %></small><br>
    <small><b>No. Pedimento: </b><%= item.number_procedure %></small><br>
    <small><b>No. Parte: </b><%= item.number_part %></small>    
  </p>
<% end %>

<p>
  <strong><%= t("lendings.deleted_at")%>:</strong>
  <%= @lending.deleted_at %>
</p>

</div>
<div class="modal-footer"> 
     <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t(:close) %></button>
</div>
