  <hr>
  <strong>Costos y Precios</strong>
  <div class="form-group">
    <%= f.label :currency_id, class: "col-form-label"%>
    <div class="form-group">
      <%= f.collection_select :currency_id, Currency.all, :id, :abbreviation, {prompt: t('choose_from_select')}, {class: "custom-select custom-select-sm"}  %>
    </div>
  </div>

  <div class="form-group">
        <%= f.label :code, class: "col-form-label"%>
        <%= f.text_field :code, class: "form-control", type: "text" %>
  </div>

  <div class="form-group">
        <%= f.label :code_alternative, class: "col-form-label"%>
        <%= f.text_field :code_alternative, class: "form-control", type: "text" %>
  </div>

  <div class="form-group">
        <%= f.label :stocking_time, class: "col-form-label"%>
        <%= f.text_field :stocking_time, class: "form-control", type: "text" %>
  </div>

  <div class="form-group">
        <%= f.label :cost_price, class: "col-form-label"%>
        <%= f.text_field :cost_price, class: "form-control", type: "number" %>
  </div>

  <div class="form-group">
        <%= f.label :amount_public, class: "col-form-label"%>
        <%= f.text_field :amount_public, class: "form-control", type: "number" %>
  </div>

