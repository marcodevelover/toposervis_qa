<% if @collection.each do |object| %>
<tr>
        <td scope="row" ><%= object.id %></td>
        <td><%= object.name %></td>
        <td><%= object.brand %></td>
        <td><%= object.model %></td>
        <td><%= object.deleted_at? ? "<span class='badge badge-danger'>Baja</span>".html_safe : "<span class='badge badge-success'>Activado</span>".html_safe %></td>
        <td>
        	<%= link_to [:admin, object], :class => "btn btn-sm btn-info", data: { modal: true, turbolinks: false }   do %>
        		<em class="fas fa-binoculars"></em> 
        	<%end%>

        	<%= link_to edit_admin_product_path(object), :class => "btn btn-sm btn-info", data: { modal: true }   do %>
        		<em class="fa fa-edit"></em> 
        	<%end%>



                <%= link_to new_admin_product_path, :class => "btn btn-success ml-auto", data: { modal: true }   do %>
                  <em class="fa fa-plus-circle fa-fw mr-1"></em>Agregar
                <%end%>


            <%= link_to edit_admin_product_path(object), :class => "btn btn-sm btn-info", data: { modal: true }   do %>
                <em class="fa fa-file-image"></em> 
            <%end%>
        		






        	<%= link_to delete_admin_product_path(object), :class => "btn btn-sm btn-danger", remote: true   do %>
        		<em class="fa fa-trash fa-fw"></em>
        	<%end%>           		
        </td>

</tr>
<% end.empty? %>
  <h3>No hay resultados</h3>
<% end %>



