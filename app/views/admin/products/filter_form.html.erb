  
	 <%= search_form_for [:admin, @q], remote:true do |f| %> 
  			
			<div class="modal-body">
				<div class="form-group">
					<div class="form-group"> 
						<label class="form-label"><%= t("users.email")%></label>
						<div class="form-group">
							<%= search_field_tag  "q[email_cont]",nil,class: "form-control", placeholder: t('users.email'), width: '100%'%>
 
						</div>
					</div>
					<div class="form-group"> 
						<label class="form-label"><%= t("users.name")%></label>
						<div class="form-group">
							<%= search_field_tag "q[name_cont]",nil,class: "form-control" , placeholder: t('users.name') %>
						</div>
					</div>
					<div class="form-group"> 
						<label class="form-label"><%= t("users.lastname")%></label>
						<div class="form-group">
							<%= search_field_tag "q[lastname_cont]",nil,class: "form-control" , placeholder: t('users.lastname') %>
						</div>  
					</div>
					 
					<div class="form-group">
						<label class="form-label"><%= t("users.role")%></label>
						<div class="form-group">
							<%= select_tag "q[profile_id_eq]", options_from_collection_for_select(Role.all, "id", "description"), prompt: t('choose_from_select'), class:"form-control"%>
						</div>
					</div>   
					 
				</div>
			</div>
			<div class="modal-footer">
				<%= submit_tag t('search'),class: 'btn btn-info waves-effect' %> 
				<button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancelar</button>
			</div>
		<% end %>
 