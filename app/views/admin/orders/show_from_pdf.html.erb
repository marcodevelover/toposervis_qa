<div class="invoice-box">
        <table cellpadding="0" cellspacing="0">
          <tr class="top">
            <td colspan="5">
              <table>
                <tr>
                  <td class="title">
                    <%= wicked_pdf_image_tag 'pdf/logo.png' %>
                  </td>

                  <td>
                    <strong>Toposervis S de RL de CV</strong>
                    <br>
                    <span>Calle42No.264x41Ay 41C</span>
                    <br>
                    <span>Fraccionamiento Francisco de MontejoIII Mérida,Yucatán </span>
                    <br>
                    <span>Tel. 01 800 890 9383 CP 97203</span>
                  </td>
                </tr>
              </table>
            </td>
          </tr>
        

          <tr class="information">
            <td colspan="5">
              <table>
                <tr>
                  <td>
                  	<b>Contacto:</b>
                    <%= @order.customer.customer_contacts.blank? ? "----" : @order.customer.customer_contacts.first.name %><br>
                    <b>Compañia:</b>
                    <%= @order.customer.business_name %><br>
                    <b>E-mail:</b>
                    <%= @order.customer.customer_contacts.blank? ? "----" : @order.customer.customer_contacts.first.email %><br>
                    <b>Método de pago:</b>
                    <%= @order.sale.payment_method.name %><br>
                    <b>Forma de pago:</b>
                    <%= @order.sale.payment_way.name %>
                  </td>
                  <td>
                  	<h3>Nota de venta</h3><br>
                  	<b>Folio:</b>
                    <%= @order.sale.folio %><br>
                    <b>Fecha:</b>
                    <%= @order.created_at.strftime("%d-%m-%Y") %>
                  </td>

                </tr>
              </table>
            </td>
          </tr>

          <tr class="heading">
            <td>Concepto</td>
            <td class="right">Unidad</td>
            <td class="right">Precio</td>
            <td class="right">Cantidad</td>
            <td>Total</td>
          </tr>

          <% @order.items.each do |item| %>
            <tr class="item">
                <td>
                    <%= item.name %><br>
                    <small><%= item.extended_description %></small>
                </td>

                <td class="right">
                    <%= item.unit %>
                </td>

                <td class="right">
                    <%= number_to_currency(item.unit_price) %>
                </td>

                <td class="right">
                    x <%= item.quantity %>
                </td>

                <td>
                    <%= number_to_currency(item.unit_price * item.quantity) %>
                </td>
            </tr>
          <% end %>



          <tr>
            <td colspan="5"></td>
          </tr>

          <tr>
            <td colspan="3"></td>
            <td><b>Subtotal</b></td>
            <td><%= number_to_currency(@order.subtotal) %></td>
          </tr>

          <tr>
            <td colspan="3"></td>
            <% if @order.adjustment_total != 0 %>
            <td><b>Descuento</b></td>
            <td>- <%= number_to_currency(@order.adjustment_total) %></td>
            <% end %>
          </tr>

          <tr>
            <td colspan="3"></td>
            <% if @order.is_tax %>
            <td><b>Impuesto (<%= (@order.tax * 100).to_i %>%)</b></td>
            <td>+ <%= number_to_currency(@order.tax_total) %></td>
            <%end%>
          </tr>

          <tr class="heading">
            <td colspan="3"></td>
            <td><b>TOTAL:</b></td>
            <td>
               <% if @order.is_tax %>
               <b><%= number_to_currency(@order.total) %></b>
               <%else%>
               <b><%= number_to_currency(@order.subtotal) %></b>
               <%end%>
            </td>
          </tr>
              </table>
            </td>
          </tr>          
          
        </table>
    </div>