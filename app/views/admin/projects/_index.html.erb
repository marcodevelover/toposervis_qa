<% if @collection.each do |object| %>
<tr>
        
        <td><%= object.folio %></td>
        <td><%= object.provider ? object.provider.business_name : "N/A" %></td>
        <td><%= object.total %></td>
        <td>
            <% if object.deleted_at? %>
                <span class="badge badge-danger"><%= t("deleted")%></span>
            <% end %>
            <% unless object.deleted_at? %>
                <span class="badge badge-<%= object.state %>"><%= t(object.state) %></span>    
                
            <% end %>
        </td>
        <td>
            <%= link_to show_from_modal_admin_project_path(object), :class => "btn btn-sm btn-info", data: { modal: true, turbolinks: false, toggle: 'tooltip', placement: 'top', original_title: t('information') }   do %>
                <em class="fas fa-info-circle"></em> 
            <%end%>



            <%= link_to show_from_pdf_admin_project_path(object, format: :pdf), :class => "btn btn-sm btn-info", target: :_blank, data: { toggle: 'tooltip', placement: 'top', original_title: t('print') } do %>
                <em class="fas fa-print"></em> 
            <%end%>
        		
        	<%= link_to delete_admin_project_path(object), :class => "btn btn-sm btn-danger", remote: true, data: { toggle: 'tooltip', placement: 'top', original_title: t('remove') }   do %>
        		<em class="fa fa-trash fa-fw"></em>
        	<%end%>           		
        </td>

</tr>
<% end.empty? %>
  <h3>No hay resultados</h3>
<% end %>