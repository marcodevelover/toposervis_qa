<div class="modal-body">
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Rfc:</strong>
  <%= @customer.rfc %>
</p>

<p>
  <strong>Business name:</strong>
  <%= @customer.business_name %>
</p>

<p>
  <strong>street:</strong>
  <%= @customer.customer_address.street %>
</p>

<p>
  <strong>number:</strong>
  <%= @customer.customer_address.number %>
</p>

<p>
  <strong>crossing:</strong>
  <%= @customer.customer_address.crossing %>
</p>

<p>
  <strong>postcode:</strong>
  <%= @customer.customer_address.postcode %>
</p>

<p>
  <strong>colony:</strong>
  <%= @customer.customer_address.colony %>
</p>

<p>
  <strong>town:</strong>
  <%= @customer.customer_address.town %>
</p>

<p>
  <strong>state:</strong>
  <%= @customer.customer_address.state %>
</p>

<p>
  <strong>country:</strong>
  <%= @customer.customer_address.country %>
</p>


<% @customer.customer_contacts.each do |contact| %>
  <hr>
  <p>
    <strong>Contact name:</strong>
    <%= contact.name %>
  </p>

  <p>
    <strong>Department:</strong>
    <%= contact.department %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= contact.phone %>
  </p>

  <p>
    <strong>Extension:</strong>
    <%= contact.extension %>
  </p>

  <p>
    <strong>Cellphone:</strong>
    <%= contact.cellphone %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= contact.email %>
  </p>
  <hr>

<% end %>

<p>
  <strong>beneficiary:</strong>
  <%= @customer.customer_bank.beneficiary %>
</p>

<p>
  <strong>account:</strong>
  <%= @customer.customer_bank.account %>
</p>

<p>
  <strong>clabe:</strong>
  <%= @customer.customer_bank.clabe %>
</p>

<p>
  <strong>bank_name:</strong>
  <%= @customer.customer_bank.bank_name %>
</p>

<p>
  <strong>currency:</strong>
  <%= @customer.customer_bank.currency %>
</p>

<p>
  <strong>Deleted at:</strong>
  <%= @customer.deleted_at %>
</p>

</div>
<div class="modal-footer"> 
     <button type="button" class="btn btn-secondary" data-dismiss="modal"><%= t(:close) %></button>
</div> 

<div id="modal-holder" ></div>