<% if @collection.each do |object| %>
<tr>
        <td scope="row" ><%= object.id %></td>
        <td><%= object.record_type %></td>
        <td><%= object.folio %></td>
        <td><%= object.payment_method.name %></td>
        <td><%= object.payment_way.name %></td>
        <td>
            <% if object.deleted_at? %>
                <span class="badge badge-danger">Baja</span>
            <% end %>

            <% unless object.deleted_at? %>
                <span class="badge badge-<%= object.state %>"><%= object.state %></span>
            <% end %>
        </td>
        <td>
        	<%= link_to [:admin, object], :class => "btn btn-sm btn-info", data: { modal: true, turbolinks: false }   do %>
        		<em class="fas fa-info-circle"></em> 
        	<%end%>	
            <a class="btn btn-sm btn-info" href="">
              <em class="fa-1x far fa-money-bill-alt"></em> Facturar
</a>
            <a class="btn btn-sm btn-danger" href="">
              <em class="fa-1x far fa-money-bill-alt"></em>Cancelar
</a>

            <% if object.record_type == "Quotation" %>
            <%= link_to show_from_pdf_admin_quotation_path(object.record_id, format: :pdf), :class => "btn btn-sm btn-info", target: :_blank do %>
                <em class="fas fa-print"></em> 
            <%end%>
            <%end%>

            <% if object.record_type == "Order" %>
            <%= link_to show_from_pdf_admin_order_path(object.record_id, format: :pdf), :class => "btn btn-sm btn-info", target: :_blank do %>
                <em class="fas fa-print"></em> 
            <%end%>
            <%end%>

            <% if object.record_type == "Diagnosis" %>
            <%= link_to show_from_pdf_admin_diagnosis_path(object.record_id, format: :pdf), :class => "btn btn-sm btn-info", target: :_blank do %>
                <em class="fas fa-print"></em> 
            <%end%>
            <%end%>
        </td>

</tr>
<% end.empty? %>
  <h3>No hay resultados</h3>
<% end %>



