swal({
    title: 'Â¿Estas seguro?',
    text: 'Desea borrar este registro!',
    icon: 'warning',
    buttons: {
        cancel: {
            text: 'No, cancelar!',
            value: null,
            visible: true,
            className: "",
            closeModal: false
        },
        confirm: {
            text: 'Si, eliminar!',
            value: true,
            visible: true,
            className: "bg-danger",
            closeModal: false
        }
    }
}).then(function(isConfirm) {

    if (isConfirm) {
        swal('Eliminado!', 'Tu registro se ha dado de baja.', 'success');
        $.ajax({
                url: "/admin/<%=controller_name%>/<%=@object.id%>/",
                type: "DELETE",  
                success: function () {
                    swal("done", "changes_saved", "success");
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    swal("Error eliminando!", "Por favor intenta de nuevo", "error");
                }
            });                
    } else {
        swal('Cancelado', 'No se realizaron los cambios', 'error');
    }

    });
            


