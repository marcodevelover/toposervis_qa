  
	 <%= search_form_for [:admin, @q], remote:true do |f| %> 
  			
			<div class="modal-body">
				<div class="form-group">
					<div class="form-group"> 
						<label class="form-label"><%= t("providers.name")%></label>
						<div class="form-group">
							<%= search_field_tag  "q[name_cont]",nil,class: "form-control", placeholder: t('providers.name'), width: '100%'%>
 
						</div>
					</div>
					<div class="form-group"> 
						<label class="form-label"><%= t("providers.rfc")%></label>
						<div class="form-group">
							<%= search_field_tag "q[rfc_cont]",nil,class: "form-control" , placeholder: t('providers.rfc') %>
						</div>
					</div>
					<div class="form-group"> 
						<label class="form-label"><%= t("providers.business_name")%></label>
						<div class="form-group">
							<%= search_field_tag "q[business_name _cont]",nil,class: "form-control" , placeholder: t('providers.business_name') %>
						</div>  
					</div>
					 
				</div>
			</div>
			<div class="modal-footer">
				<%= submit_tag t('search'),class: 'btn btn-info waves-effect' %> 
				<button type="button" class="btn btn-default waves-effect" data-dismiss="modal">Cancelar</button>
			</div>
		<% end %>
 