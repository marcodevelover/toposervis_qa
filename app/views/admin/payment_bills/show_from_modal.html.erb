<div class="modal-body">
<p id="notice"><%= notice %></p>

<p>
  <strong><%= t("orders.folio")%>:</strong>
  <%= @order.sale.folio %>
</p>

<p>
  <strong>¿Incluye impuestos?</strong>
  <%= t @order.is_tax?.to_s %>
</p>

<p>
  <% if @order.is_tax %>  
    <strong>Subtotal:</strong>
  <% else %>  
    <strong>Total:</strong>
  <% end %>
<%= @order.subtotal %>
</p>

<p>
  <strong><%= t("orders.adjustment_total")%>:</strong>
  <%= @order.adjustment_total %>
</p>
<% if @order.is_tax %>

    <p>
      <strong><%= t("orders.total")%>:</strong>
      <%= @order.total %>
    </p>    
    <p>
      <strong><%= t("orders.tax")%>:</strong>
      <%= @order.tax %>
    </p>

    <p>
      <strong><%= t("orders.tax_total")%>:</strong>
      <%= @order.tax_total %>
    </p>
<% end %>
<p>
  <strong><%= t("orders.state")%>:</strong>
  <%= @order.deleted_at? ? "Baja".html_safe : "Activo".html_safe %>
</p>
<p>
  <strong><%= t("orders.date")%>:</strong>
  <%= @order.date%>
</p>
<p>
  <strong>Método de pago:</strong>
  <%= @order.sale.payment_method ? @order.sale.payment_method.name : "N/A" %>
</p>
<p>
  <strong>Forma de pago:</strong>
  <%= @order.sale.payment_way ? @order.sale.payment_way.name : "N/A" %>
</p>
<p>
  <strong><%= t("orders.currency")%>:</strong>
  <%= @order.currency ? @order.currency.abbreviation : "N/A" %>
</p>

<p>
  <strong><%= t("orders.exchange_rate")%>:</strong>
  <%= @order.exchange_rate %>
</p>

<p>
  <strong><%= t("orders.customer")%>:</strong>
  <%= @order.customer ? @order.customer.name : "N/A" %>
</p>

<p>
  <strong><%= t("orders.observation")%>:</strong>
  <%= @order.observation %>
</p>

<p>
  <strong><%= t("orders.created_by")%>:</strong>
  <%= @order.user.name %> <%= @order.user.lastname %>
</p>

<h4>Productos</h4>

<% @order.items.each do |item| %>
  <p>
    <strong>Producto:</strong>
    <%= item.product_variant.product.name %>
    <strong>Cantidad:</strong>
    <%= item.quantity %>
  </p>
<% end %>

<p>
  <strong><%= t("orders.deleted_at")%>:</strong>
  <%= @order.deleted_at %>
</p>

</div>
<div class="modal-footer"> 
     <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t(:close) %></button>
</div>