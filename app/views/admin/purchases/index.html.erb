            <p id="notice"><%= notice %></p>
            <div class="card">
               <div class="card-header">
                <%= link_to new_admin_purchase_path, :class => "btn btn-success ml-auto" do %>
                  <em class="fa fa-plus-circle fa-fw mr-1"></em>Agregar
                <%end%>
                <%= link_to filter_form_admin_purchases_path, :class => "btn btn-success ml-auto", data: { modal: true }   do %>
                  <em class="fa mr-2 fas fa-search"></em>Buscar
                <%end%>
                <%= sort_link(@q, "exportar", :format => "xlsx") do %>
                <div class="btn btn-success">
                <em class="fa fa-file-excel"></em> Exportar
                </div>
                <% end%>
                <br><br>
                <div class="form-group">
                <%= search_form_for [:admin, @q] do |f| %>
                  <%= f.search_field :folio_or_provider_business_name_or_provider_name_or_provider_rfc_cont, class: "form-control", placeholder: t('search') %><br>
                  <div class="form-group row">
                     <div class="col-md-12">
                        <div class="form-row">
                          <div class="col-lg-6 mb-6">
                            <label class="form-label">Fecha Inicio</label>
                            <div class="form-group"> 
                              <%= f.search_field :created_at_gteq, class: "form-control" , placeholder: "Buscar", type: 'date'%>
                            </div>  
                          </div> 
                          <div class="col-lg-6 mb-6">
                            <label class="form-label">Fecha Final</label>
                            <div class="form-group"> 
                              <%= f.search_field :created_at_lteq, class: "form-control" , placeholder: "Buscar", type: 'date'%>
                            </div>  
                          </div>
                        </div>
                    </div>
                  </div>
                  <%= f.submit class: "btn btn-success waves-effect"%>
                <% end %>
                </div>

               </div>
               <div class="card-body">
                  <div class="table-responsive bootgrid">
                     <table class="table table-striped" id="bootgrid-command" >
                        <thead>
                           <tr>
                              
                              <th data-column-id="name"><%= t("purchases.folio")%></th>
                              <th data-column-id="rfc" data-order="desc"><%= t("purchases.provider")%></th>
                              <th data-column-id="business_name" data-order="desc"><%= t("purchases.total")%></th>
                              <th data-column-id="status" data-order="desc"><%= t("purchases.state")%></th>
                              <th data-column-id="commands" data-formatter="commands" data-sortable="false">
                                 <div class="text-left"><%= t :commands %></div>
                              </th>
                           </tr>
                        </thead>
                        <tbody class="index-collection">
                         <%= render "index" %> 
                        </tbody>
                     </table>
                    <div class="pagination" id='pagination' style="margin-right: 10%;">
                      <%= render partial: 'admin/shared/paginate', locals: { objects: @collection } %>
                    </div>                     
                  </div>
               </div>
            </div>