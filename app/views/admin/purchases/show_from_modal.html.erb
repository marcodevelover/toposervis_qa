<div class="modal-body">
<p id="notice"><%= notice %></p>

<p>
  <strong><%= t("purchases.folio")%>:</strong>
  <%= @purchase.folio %>
</p>

<p>
  <strong><%= t("purchases.code_invoice")%>:</strong>
  <%= @purchase.code_invoice %>
</p>

<p>
  <strong><%= t("purchases.subtotal")%>:</strong>
  <%= @purchase.subtotal %>
</p>

<p>
  <strong><%= t("purchases.total")%>:</strong>
  <%= @purchase.total %>
</p>

<p>
  <strong><%= t("purchases.tax")%>:</strong>
  <%= @purchase.tax %>
</p>

<p>
  <strong><%= t("purchases.tax_total")%>:</strong>
  <%= @purchase.tax_total %>
</p>

<p>
  <strong><%= t("purchases.state")%>:</strong>
  <%= @purchase.state %>
</p>

<p>
  <strong><%= t("purchases.date")%>:</strong>
  <%= @purchase.date %>
</p>

<p>
  <strong><%= t("purchases.provider")%>:</strong>
  <%= @purchase.provider ? @purchase.provider.name : "N/A" %>
</p>

<p>
  <strong><%= t("purchases.created_by")%>:</strong>
  <%= @purchase.user.name %> <%= @purchase.user.lastname %>
</p>

<h4>Productos</h4>

<% @purchase.purchase_items.each do |item| %>
  <p>
    <strong>Producto:</strong>
    <%= item.product_variant.product.name %><br>
    <small><b>Unidad: </b> <%= item.unit %></small><br>
    <small><b>No. Serie: </b> <%= item.number_serie %></small><br>
    <small><b>No. Pedimento: </b><%= item.number_procedure %></small><br>
    <small><b>No. Parte: </b><%= item.number_part %></small>    
  </p>
<% end %>

<p>
  <strong><%= t("purchases.deleted_at")%>:</strong>
  <%= @purchase.deleted_at %>
</p>

</div>
<div class="modal-footer"> 
     <button type="button" class="btn btn-danger" data-dismiss="modal"><%= t(:close) %></button>
</div>
