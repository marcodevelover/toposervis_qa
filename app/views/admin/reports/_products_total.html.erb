            <div class="card">
               <div class="card-header">
                <%= sort_link(@q, "exportar", :format => "xlsx") do %>
                <div class="mb-1 btn btn-success">
                <em class="fa fa-file-excel"></em> Exportar
                </div>
                <% end%>
               </div>
               <div class="card-body">
                  <div class="table-responsive bootgrid">
                     <table class="table table-striped" id="bootgrid-command" >
                        <thead>
                           <tr>
                              <th data-column-id="id" data-type="numeric">ID</th>
                              <th data-column-id="name">Nombre</th>
                              <th data-column-id="rfc" data-order="desc">Marca</th>
                              <th data-column-id="business_name" data-order="desc">Modelo</th>
                              <th data-column-id="status" data-order="desc">Existencia</th>
                              <th data-column-id="status" data-order="desc">Estatus</th>
                           </tr>
                        </thead>
                       <tbody class="index-collection">
            
                        <% if @collection.each do |object| %>
                          <tr>
                                  <td scope="row" ><%= object.id %></td>
                                  <td><%= object.name %></td>
                                  <td><%= object.brand %></td>
                                  <td><%= object.model %></td>
                                  <td><%= object.product_variants.first.stock_item.blank? ? 0 : object.product_variants.first.stock_item.stock.round %></td>
                                  <td><%= object.deleted_at? ? "<span class='badge badge-danger'>Baja</span>".html_safe : "<span class='badge badge-success'>Activo</span>".html_safe %></td>
                                  <td>
                          </tr>
                        <% end.empty? %>
                          <h4>No hay resultados</h4>
                        <%end%>
                        </tbody>
                     </table>
                    <div class="pagination" id='pagination' style="margin-right: 10%;">
                      <!-- add paginate-->
                      <%= render partial: 'admin/shared/paginate_report', locals: { objects: @collection } %>
                    </div>                     
                  </div>
               </div>
            </div>