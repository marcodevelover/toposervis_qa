   <div class="wrapper">
      <div class="block-center mt-4 wd-xl">
         <!-- START card-->
         <div class="card card-flat">
            <div class="card-header text-center ">
              <%= image_tag("pdf/logo.png", alt: "logo", class: "block-center rounded") %>
            </div>
            <div class="card-body">
               <p class="text-center py-2">SIGN IN TO CONTINUE.</p>
               
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group">
                     <div class="input-group with-focus">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control border-right-0", type: "email",placeholder: "Enter email", :required => true%>                      
                     
                        <div class="input-group-append"><span class="input-group-text text-muted bg-transparent border-left-0"><em class="fa fa-envelope"></em></span></div>
                     </div>
                  </div>
                  <div class="form-group">
                     <div class="input-group with-focus">
                      <%= f.password_field :password, autocomplete: "current-password", class: "form-control border-right-0", type: "password",placeholder: "Password", :required => true%> 
                        <div class="input-group-append"><span class="input-group-text text-muted bg-transparent border-left-0"><em class="fa fa-lock"></em></span></div>
                     </div>
                  </div>
                  <div class="clearfix">
                    <% if devise_mapping.rememberable? %>
                     <div class="checkbox c-checkbox float-left mt-0"><label>
                      <%= f.check_box :remember_me, type: "checkbox", name: "remember" %>
                      <span class="fa fa-check"></span> Remember Me</label>
                     </div>
                    <% end %>
                     <div class="float-right"><a class="text-muted" href="recover.html"><%= render "devise/shared/links" %></a></div>
                  </div>
                  
                  <%= f.submit "Log in", class: "btn btn-block btn-primary mt-3", type: "submit"  %>
               <% end %>
               
            </div>
         </div><!-- END card-->
         <div class="p-3 text-center"><span class="mr-2">&copy;</span><span>2020 </span><span class="mr-2">-</span><span>Toposervis</span><br><span>www.toposervis.com.mx</span></div>
      </div>
   </div>